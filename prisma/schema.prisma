generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model vessel {
  embarcacao Int     @id @default(autoincrement())
  nome       String?
  imo        String?
  mmsi       String?
  callsign   String?
  bloqueado  Int?

  @@map("Embarcacoes")
}

model service_orders {
  OrdemServico      String   @id
  DataServico       DateTime
  Cliente           String
  ReferenciaCliente String?
  Embarcacao        Int?

  @@map("OrdensServico")
}

model ndo_srvproperty {
  license Bytes? @db.Image

  @@map("$ndo$srvproperty")
  @@ignore
}
